<block qq:if="{{url}}"><view class="xpj-audio-box"><view class="portrait_view"><image class="portrait_img" src="{{portrait}}" mode="scaleToFill"></image><view data-event-opts="{{[['tap',[['startPlay',['$event']]]]]}}" class="play-btn" bindtap="__e"><image hidden="{{!(!status)}}" class="play-icon" src="{{startImg}}"></image><image hidden="{{!(status)}}" class="play-icon" src="{{endImg}}"></image></view></view><view class="music_title_box"><view class="music_title p-line-1">{{''+music_title+''}}</view><view class="slider_box"><view class="current-time time-text">{{$root.m0}}</view><view class="audio-action"><slider activeColor="{{activeColor}}" block-color="{{blockColor}}" backgroundColor="{{backgroundColor}}" block-size="12" disabled="{{currentTime==0}}" min="{{0}}" max="{{$root.g0}}" value="{{$root.g1}}" step="{{0.1}}" data-event-opts="{{[['change',[['changeAudio',['$event']]]]]}}" bindchange="__e"></slider></view><view class="duration-time time-text">{{$root.m1}}</view></view><image class="musicClose" src="/static/home/musicClose.png" mode="scaleToFill" data-event-opts="{{[['tap',[['musicClose',['$event']]]]]}}" bindtap="__e"></image></view></view></block>